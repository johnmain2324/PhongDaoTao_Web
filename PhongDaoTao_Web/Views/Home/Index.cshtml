@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Banner -->
<!-- ==============================
     🌆 BANNER NỀN ẢNH CHẠY NGANG
     ============================== -->
<div class="banner-slider text-center position-relative overflow-hidden">

    <!-- 🎞️ Thanh chứa các ảnh nền chạy ngang -->
    <div class="background-slide">
        <img src="/images/2019-Yola.NTT_.04-scaled.jpg" alt="Ảnh nền 1" />
        <img src="/images/7b331b5c2261408eb569baaea4a33066.jpg" alt="Ảnh nền 2" />
        <img src="/images/a8209c22b36616384f77-15261252.jpg" alt="Ảnh nền 3" />
        <img src="/images/ialc-english-center-phu-yen.jpg" alt="Ảnh nền 4" />
        <img src="/images/photo22.jpg" alt="Ảnh nền 5" />
    </div>

    <!-- 🌟 Nội dung nằm giữa banner -->
    <div class="banner-content text-white">
        <h1 class="fw-bold display-5 mb-3 text-shadow">
            Chào mừng đến với Trung tâm Anh ngữ
        </h1>
        <p class="lead mb-4 text-shadow">
            Nơi giúp bạn tự tin giao tiếp và chinh phục các kỳ thi quốc tế
        </p>
        <a href="/Room" class="btn btn-light btn-lg shadow">
            <i class="bi bi-book-half me-2"></i>Khám phá khóa học
        </a>
    </div>
</div>

<!-- Giới thiệu ====================================================================================================================================================== -->
<section class="text-center mb-5 why-us mt-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-stars me-2"></i>Vì sao chọn chúng tôi?
    </h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 p-4">
                <div class="text-primary fs-1 mb-3"><i class="bi bi-journal-bookmark-fill"></i></div>
                <h5 class="fw-semibold">Khóa học đa dạng</h5>
                <p>Khóa học phù hợp cho mọi cấp độ — từ mất gốc đến luyện thi IELTS, TOEIC, giao tiếp.</p>
                <img src="/images/course.jpg" class="rounded mt-3 img-fluid" alt="Khóa học" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 p-4">
                <div class="text-primary fs-1 mb-3"><i class="bi bi-person-badge-fill"></i></div>
                <h5 class="fw-semibold">Giảng viên tận tâm</h5>
                <p>Đội ngũ giảng viên đạt chứng chỉ quốc tế, luôn đồng hành cùng học viên trong quá trình học tập.</p>
                <img src="/images/teacher.jpg" class="rounded mt-3 img-fluid" alt="Giảng viên" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 p-4">
                <div class="text-primary fs-1 mb-3"><i class="bi bi-building-check"></i></div>
                <h5 class="fw-semibold">Cơ sở vật chất hiện đại</h5>
                <p>Phòng học rộng rãi, thiết bị trình chiếu và âm thanh đạt tiêu chuẩn quốc tế.</p>
                <img src="/images/facility.jpg" class="rounded mt-3 img-fluid" alt="Phòng học" />
            </div>
        </div>
    </div>
</section>

<!-- Tin tức -->
<!-- =========================
     📰 PHẦN TIN TỨC
     ========================= -->
<section id="tin-tuc" class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary">
        <i class="bi bi-newspaper me-2"></i>Tin tức - Sự kiện
    </h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="/images/news1.jpg" class="card-img-top" alt="Tin 1">
                <div class="card-body">
                    <h5 class="card-title">Khai giảng khóa học mới</h5>
                    <p class="card-text">Trung tâm Anh ngữ khai giảng lớp giao tiếp cơ bản tháng 10...</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="/images/news2.jpg" class="card-img-top" alt="Tin 2">
                <div class="card-body">
                    <h5 class="card-title">Ưu đãi học phí tháng này</h5>
                    <p class="card-text">Giảm 30% cho học viên đăng ký mới trước ngày 30/10...</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="/images/news3.jpg" class="card-img-top" alt="Tin 3">
                <div class="card-body">
                    <h5 class="card-title">Học viên đạt 8.0 IELTS</h5>
                    <p class="card-text">Chúc mừng bạn Minh Anh đã xuất sắc đạt điểm cao trong kỳ thi IELTS!</p>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- CTA ======================================================================================================================================================-->
<section class="text-center py-5 bg-primary text-white rounded shadow-sm mb-4">
    <h3 class="fw-bold mb-3"><i class="bi bi-megaphone-fill me-2"></i>Đăng ký học ngay hôm nay!</h3>
    <p class="mb-4">Tham gia lớp học thử miễn phí để trải nghiệm chất lượng giảng dạy tại trung tâm.</p>
    <a href="/Room" class="btn btn-light btn-lg"><i class="bi bi-pencil-square me-2"></i>Đăng ký ngay</a>
</section>
