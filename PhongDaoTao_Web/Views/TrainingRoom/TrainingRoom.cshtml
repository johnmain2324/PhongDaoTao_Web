@model PhongDaoTao_Web.Models.TrainingRoom
@{
    var isEdit = Model?.IdTrainingRoom > 0;
    ViewData["Title"] = isEdit ? "Sửa phòng" : "Thêm phòng";
}

<div class="container py-4">
    <a class="btn btn-link" href="@Url.Action("Index")">&larr; Quay lại</a>
    <h2 class="mb-3">@ViewData["Title"]</h2>

    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="row g-3">
        @if (isEdit)
        {
            <input type="hidden" asp-for="IdTrainingRoom" />
        }

        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Capacity" class="form-label"></label>
            <input asp-for="Capacity" class="form-control" type="number" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="ImageUrl" class="form-label">Ảnh (URL)</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Equipment" class="form-label"></label>
            <input asp-for="Equipment" class="form-control" />
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-12">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" />
        </div>

        <div class="col-12">
            <button class="btn btn-primary">@(isEdit ? "Lưu" : "Tạo mới")</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
