@model PhongDaoTao_Web.Models.TrainingRoom
<div class="card h-100 shadow-sm">
    <img src="@(String.IsNullOrEmpty(Model.ImageUrl) ? "/images/placeholder-TrainingRoom.jpg" : Model.ImageUrl)" class="card-img-top" style="height:160px; object-fit:cover;" alt="@Model.Name" />
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text text-muted mb-1"><strong>Sức chứa:</strong> @Model.Capacity</p>
        <p class="card-text mb-2"><strong>Thiết bị:</strong> @(Model.Equipment ?? "-")</p>
        <p class="card-text text-truncate">@Model.Description</p>
        <div class="mt-auto">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Details","TrainingRoom", new { id = Model.IdTrainingRoom })">Chi tiết</a>
            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit","TrainingRoom", new { id = Model.IdTrainingRoom })">Sửa</a>
            <form class="d-inline" asp-action="Delete" asp-controller="TrainingRoom" method="post" onsubmit="return confirm('Bạn có muốn xóa phòng này?');">
                <input type="hidden" name="id" value="@Model.IdTrainingRoom" />
                <button class="btn btn-sm btn-danger">Xóa</button>
            </form>
        </div>
    </div>
</div>
