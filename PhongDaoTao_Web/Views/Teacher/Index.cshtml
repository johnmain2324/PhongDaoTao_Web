@{
    ViewData["Title"] = "Trang giảng viên";
}

<link rel="stylesheet" href="~/css/trainingroom.css" />
<section class="container text-center my-2 py-1">
    <!-- ======= TIÊU ĐỀ ======= -->
    <h2 class="fw-bold text-uppercase text-primary mb-5">
        Giáo Viên
    </h2>

    <!-- ======= HÀNG 1 ======= -->
    <div class="row g-4 justify-content-center mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-danger rounded-circle p-4 mx-auto"
                 style="cursor: pointer;"
                 data-bs-toggle="modal" data-bs-target="#scheduleModal">
                <i class="bi bi-calendar-event fs-1 text-danger"></i>
            </div>
            <p class="fw-semibold mt-3 text-danger">Xem thời khóa biểu, nhập điểm</p>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-warning rounded-circle p-4 mx-auto">
                <i class="bi bi-briefcase-fill fs-1 text-warning"></i>
            </div>
            <p class="fw-semibold mt-3 text-warning">Cơ hội việc làm</p>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-danger rounded-circle p-4 mx-auto">
                <i class="bi bi-book-fill fs-1 text-danger"></i>
            </div>
            <p class="fw-semibold mt-3 text-danger">Học liệu số</p>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-success rounded-circle p-4 mx-auto">
                <i class="bi bi-laptop-fill fs-1 text-success"></i>
            </div>
            <p class="fw-semibold mt-3 text-success">E-Learning</p>
        </div>
    </div>

    <!-- ======= HÀNG 2 ======= -->
    <div class="row g-4 justify-content-center">
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-warning rounded-circle p-4 mx-auto">
                <i class="bi bi-search fs-1 text-warning"></i>
            </div>
            <p class="fw-semibold mt-3 text-warning">Tra cứu điểm trúng tuyển</p>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-primary rounded-circle p-4 mx-auto">
                <i class="bi bi-award-fill fs-1 text-primary"></i>
            </div>
            <p class="fw-semibold mt-3 text-primary">Văn bằng - Chứng chỉ</p>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-pink rounded-circle p-4 mx-auto">
                <i class="bi bi-question-circle-fill fs-1 text-danger"></i>
            </div>
            <p class="fw-semibold mt-3 text-danger">Văn bản pháp luật</p>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="teacher-box border border-info rounded-circle p-4 mx-auto">
                <i class="bi bi-pencil-fill fs-1 text-info"></i>
            </div>
            <p class="fw-semibold mt-3 text-info">Học bổng</p>
        </div>
    </div>
</section>

<!-- 🗓️ Modal: Thời khóa biểu -->
<div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="scheduleModalLabel">
                    <i class="bi bi-calendar3 me-2"></i>Thời khóa biểu giáo viên
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body bg-light">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center bg-white shadow-sm">
                        <thead class="table-primary">
                            <tr>
                                <th>Thứ Hai</th>
                                <th>Thứ Ba</th>
                                <th>Thứ Tư</th>
                                <th>Thứ Năm</th>
                                <th>Thứ Sáu</th>
                                <th>Thứ Bảy</th>
                                <th>Chủ Nhật</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= 4; i++)
                            {
                                <tr>
                                    <td class="py-3">--</td>
                                    <td class="py-3">--</td>
                                    <td class="py-3">--</td>
                                    <td class="py-3">--</td>
                                    <td class="py-3">--</td>
                                    <td class="py-3">--</td>
                                    <td class="py-3">--</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button type="button" class="btn btn-success">
                    <i class="bi bi-pencil-square me-1"></i> Nhập điểm
                </button>
            </div>
        </div>
    </div>
</div>
