@model IEnumerable<PhongDaoTao_Web.Models.Classroom>
@{
    ViewData["Title"] = "Teaching Schedule";
}

<div class="container my-4">
    <h2 class="fw-bold text-center text-primary mb-4">
        <i class="bi bi-calendar-week"></i> Teaching Schedule
    </h2>

    @foreach (var cls in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5>@cls.ClassName</h5>
                <a href="@Url.Action("NhapDiem", new { classroomId = cls.Id })"
                   class="btn btn-light btn-sm">
                    <i class="bi bi-pencil-square"></i> Enter Scores
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Study Date</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Content</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (cls.Schedules != null && cls.Schedules.Any())
                        {
                            foreach (var sch in cls.Schedules)
                            {
                                <tr>
                                    <td>@sch.StudyDate.ToString("dd/MM/yyyy")</td>
                                    <td>@sch.StartTime</td>
                                    <td>@sch.EndTime</td>
                                    <td>@sch.Content</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No schedule available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
